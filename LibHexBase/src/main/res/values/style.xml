<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="backBtnStyle" parent="android:Widget.Button">
        <item name="android:id">@id/btnBack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@mipmap/icon_back</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SubmitDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@drawable/shadow</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--设置全屏-->
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>